<div class="text-center">
  <h1> <%= @cocktail.name %> </h1>
  <%= link_to "Add ingredient for this cocktail", new_cocktail_dose_path(@cocktail) %> |
  <%= link_to "Go back to all cocktails", cocktails_path %>
</div>

<!-- Display ingredients with doses -->
<div class="container">
  <hr>
  <ul class="list-unstyled">
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to("Delete" , dose_path(dose), method: :delete) %>

        <% if @cocktail.photo? %>
          <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
        <% end %>


        <hr>
      </li>
    <% end %>
  </ul>
</div>
